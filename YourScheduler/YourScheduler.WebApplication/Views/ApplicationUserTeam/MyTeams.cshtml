@model IEnumerable<YourScheduler.BusinessLogic.Models.DTOs.TeamDto>

@{
    ViewData["Title"] = "MyTeams";
}

<h1>Moje zespoły</h1>
<hr />
<p>
    <a asp-controller="Team" asp-action="Create" class="btn btn-primary">Stwórz nowy zespół</a> |
    <a asp-controller="Event" asp-action="" class="btn btn-danger">Pokaż wszystkie zespoły - TODO</a> 
   
</p>
<hr />
<div class="input-group mb-3">
    <input type="text"
           class="form-control form-control-lg"
           placeholder="Wpisz nazwę wyszukiwanego zespołu" />
    <button type="button" class="input-group-text btn-danger">Szukaj - TODO</button>
</div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().Name">Nazwa zespołu</label>
            </th>
            <th>
                <label asp-for="First().Description">Opis zespołu</label>
            </th>
           
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                
                <td>
                    <a asp-controller="Team" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Szczegóły</a>
                </td>
                <td>
                    <a asp-controller="Team" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edytuj</a>
                </td>
                <td>
                    <a asp-controller="ApplicationUserTeam" asp-action="DeleteFromCalendar" asp-route-id="@item.Id" class="btn btn-primary">Usuń Team z kalendarza</a>
                </td>
                <td>
                    <a asp-action="TeamMembers" asp-route-id="@item.Id" class="btn btn-warning">Uczestnicy zespołu</a>
                </td>
            </tr>
        }
    </tbody>
</table>


