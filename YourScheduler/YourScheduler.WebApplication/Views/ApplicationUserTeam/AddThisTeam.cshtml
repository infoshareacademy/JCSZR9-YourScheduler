@using YourScheduler.BusinessLogic.Models.DTOs;
@model TeamDto

@{
    ViewData["Title"] = "AddThisTeam";
}

<h1>AddThisTeam</h1>

<h3>Are you sure you want to Add this Event?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
                   
    </dl>

    <form asp-action="AddThisTeam">
        <input type="submit" value="Dodaj Team" class="btn btn-primary" /> |
        <a asp-controller="Team" asp-action="Index" class="btn btn-primary">Powrót do listy zespołow</a>
    </form>
</div>
