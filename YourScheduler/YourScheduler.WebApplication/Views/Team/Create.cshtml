@model YourScheduler.BusinessLogic.Models.DTOs.TeamDto

@{
    ViewBag.Title = "Create Team";
    Layout = "_Layout";
}

<h2>Stwórz nowy zespół</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa zespołu</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Description" class="control-label">Opis zespołu</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div>
               
                <input type="file" class="form-control" />
                
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Stwórz zespół" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<a asp-controller="user" asp-action="Index" class="btn btn-primary">Powrót</a>