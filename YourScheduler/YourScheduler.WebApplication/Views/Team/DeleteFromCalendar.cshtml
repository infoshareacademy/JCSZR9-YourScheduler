@model YourScheduler.BusinessLogic.Models.DTOs.TeamDto

@{
    ViewData["Title"] = "DeleteFromCalendar";
}


<h3>Czy na pewno chcesz usunąć ten zespół ze swojego kalendarza?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name">Nazwa zespołu</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description">Opis zespołu</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
       
    </dl>
</div>
<div>
    <form asp-action="DeleteFromCalendar">
        <input type="submit" value="Wypisz się z zespołu" class="btn btn-danger" />
    </form>
</div>
