@model YourScheduler.BusinessLogic.Models.DTOs.TeamDto

@{
    ViewData["Title"] = "Delete";
}


<h3>Czy na pewno chcesz całkowicie usunąć to wydarzenie?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name">Nazwa zespołu</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description">Opis zespołu</label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        
    </dl>
</div>
<div>
    <form asp-action="Delete">
        <input type="submit" value="Usuń zespół permanentnie" class="btn btn-primary" />
    </form>
</div>