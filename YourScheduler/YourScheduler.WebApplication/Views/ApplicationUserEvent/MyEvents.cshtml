@model IEnumerable<YourScheduler.BusinessLogic.Models.DTOs.EventDto>

@{
    ViewData["Title"] = "MyEvents";
}

<h1>Moje wydarzenia</h1>
<hr />
<p>
    <a asp-controller="Event" asp-action="Create" class="btn btn-primary">Stwórz nowe wydarzenie</a> |
    <a asp-controller="ApplicationUserEvent" asp-action="MyEvents" class="btn btn-primary">Pokaż wszystkie wydarzenia</a> |
    <a asp-controller="ApplicationUserEvent" asp-action="MyEventsFinished" class="btn btn-primary">Pokaż zakończone wydarzenia</a> |
    <a asp-controller="ApplicationUserEvent" asp-action="MyEventsIncoming" class="btn btn-primary">Pokaż nadchodzące wydarzenia</a>
</p>
<hr />

<form asp-controller="ApplicationUserEvent" asp-action="MyEvents">
    <div class="input-group mb-3">
        <input type="text"
               class="form-control form-control-lg"
               placeholder="Wpisz nazwę wyszukiwanego wydarzenia"
               name="searchString"/>
        <input type="submit" value="Szukaj" class="btn btn-primary" />
    </div>
</form>

<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                <label asp-for="First().Name">Nazwa wydarzenia</label>
            </th>
            <th>
                <label asp-for="First().Description">Opis wydarzenia</label>
            </th>
            <th>
                <label asp-for="First().Date">Data</label>
            </th>
            <th>
                <label asp-for="First().Isopen">Wydarzenie publiczne</label>
            </th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Date.ToString("yyyy-MM-dd HH:mm")
                </td>
                @if (@item.Isopen == true)
                {
                    <td>
                        Tak
                    </td>
                }
                @if (@item.Isopen == false)
                {
                    <td>
                        Nie
                    </td>
                }
                <td>
                    <a asp-controller="Event" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Szczegóły</a>
                </td>
                @if (item.AdministratorId == item.LoggedUserId)
                {
                    <td>
                        <a asp-controller="Event" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edytuj</a>
                    </td>
                }
                else
                {
                    <td>
                        <button type="button" class="btn btn-primary" disabled>Edytuj</button>
                    </td>
                }
                <td>
                    <a asp-controller="ApplicationUserEvent" asp-action="DeleteFromCalendar" asp-route-id="@item.Id" class="btn btn-primary">Usuń wydarzenie z kalendarza</a>
                </td>
                <td>
                    <a asp-action="EventMembers" asp-route-id="@item.Id" class="btn btn-primary">Uczestnicy wydarzenia</a>
                </td>
            </tr>
        }
    </tbody>
</table>

