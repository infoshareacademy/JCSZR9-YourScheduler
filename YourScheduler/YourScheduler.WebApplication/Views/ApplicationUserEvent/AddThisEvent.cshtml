@using YourScheduler.BusinessLogic.Models.DTOs;

@model EventDto

@{
    ViewData["Title"] = "AddThisEvent";
}

<h1>AddThisEvent</h1>

<h3>Are you sure you want to Add this Event?</h3>
<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Date"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Date
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Isopen"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Isopen
        </dd>
    </dl>

    <form asp-action="AddThisEvent">
        <input type="submit" value="AddThisEvent" class="btn btn-danger" /> |
        <a asp-action="MyEvents" class="btn btn-danger">Back to List </a>
    </form>
</div>
