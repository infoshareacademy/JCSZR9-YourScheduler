@model YourScheduler.BusinessLogic.Models.DTOs.EventDto

@{
    ViewBag.Title = "Create Event";
    Layout = "_Layout";
}

<h2>Stwórz nowe wydarzenie</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa wydarzenia</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis wydarzenia</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isopen" class="control-label">Wydarzenie publiczne</label>
                <input asp-for="Isopen" type="checkbox" />
                <span asp-validation-for="Isopen"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Stwórz wydarzenie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<a asp-controller="Event" asp-action="GetAllEvents" class="btn btn-primary">Powrót</a>
