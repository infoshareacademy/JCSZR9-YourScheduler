@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>Dane personalne</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Usunięcie danych spowoduje permanentne i nieodwracalne zamknięcie twojego konta.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Hasło użytkownika</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Usuń dane i zamknij konto użytkownika</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
